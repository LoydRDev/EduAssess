<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox prefWidth="1200" stylesheets="@../styles/Dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eduassess.controller.InstructorDashboardController">
    
    <!-- Sidebar -->
    <VBox styleClass="sidebar">
        <Label styleClass="logo" text="EduAssess" />
        
        <VBox styleClass="nav-items" VBox.vgrow="ALWAYS">
            <Button styleClass="nav-button, active" text="Dashboard" />
            <Button onAction="#handleViewClasses" styleClass="nav-button" text="My Classes" />
            <Button onAction="#handleGradeEntry" styleClass="nav-button" text="Grade Entry" />
            <Button onAction="#handleStudentRecords" styleClass="nav-button" text="Student Records" />
            <Button onAction="#handleProfile" styleClass="nav-button" text="Profile" />
            <VBox.margin>
                <Insets top="20" />
            </VBox.margin>
        </VBox>
        
        <VBox styleClass="sidebar-footer" VBox.vgrow="NEVER">
            <Button onAction="#handleLogout" styleClass="nav-button, logout-button" text="Logout" />
        </VBox>
    </VBox>
    
    <!-- Main Content -->
    <VBox styleClass="main-content" HBox.hgrow="ALWAYS">
        <!-- Header -->
        <HBox styleClass="header">
            <HBox styleClass="user-info" HBox.hgrow="ALWAYS">
                <VBox>
                    <Label styleClass="welcome-text" text="Welcome," />
                    <Label fx:id="userNameLabel" styleClass="user-name" text="Instructor Name" />
                </VBox>
                <VBox styleClass="instructor-info">
                    <Label fx:id="instructorIdLabel" styleClass="instructor-id" text="ID: " />
                    <Label fx:id="departmentLabel" styleClass="department" text="Department" />
                </VBox>
            </HBox>
        </HBox>
        
        <!-- Dashboard Content -->
        <ScrollPane fitToWidth="true" styleClass="content-area">
            <VBox spacing="20">
                <!-- Quick Stats -->
                <HBox spacing="20" styleClass="stats-container">
               <Pane>
                  <children>
                          <VBox layoutX="55.0" layoutY="4.0" styleClass="stat-card">
                              <Label styleClass="stat-label" text="Total Classes" />
                              <Label fx:id="totalClassesLabel" styleClass="stat-value" text="0" />
                          </VBox>
                          
                                      <VBox layoutX="332.0" layoutY="4.0" styleClass="stat-card">
                              <Label styleClass="stat-label" text="Total Students" />
                              <Label fx:id="totalStudentsLabel" styleClass="stat-value" text="0" />
                          </VBox>
                          
                                      <VBox layoutX="618.0" layoutY="3.0" styleClass="stat-card">
                              <Label styleClass="stat-label" text="Pending Grades" />
                              <Label fx:id="pendingGradesLabel" styleClass="stat-value" text="0" />
                          </VBox>
                  </children>
               </Pane>
                </HBox>

                <!-- Pending Evaluations Section -->
                <VBox spacing="10" styleClass="evaluations-section">
               <Pane>
                  <children>
                          <Label layoutX="46.0" styleClass="section-title" text="Pending Evaluations" />
                  </children>
               </Pane>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <ComboBox fx:id="studentComboBox" prefWidth="300" promptText="Select Student">
                            <HBox.margin>
                                <Insets right="10" />
                            </HBox.margin>
                        </ComboBox>
                    </HBox>
                    
                    <TableView fx:id="evaluationsTable" styleClass="courses-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="studentIdColumn" prefWidth="150" styleClass="table-column" text="Student ID" />
                            <TableColumn fx:id="studentNameColumn" prefWidth="250" styleClass="table-column" text="Student Name" />
                            <TableColumn fx:id="courseCodeColumn" prefWidth="150" styleClass="table-column" text="Course Code" />
                            <TableColumn fx:id="requestDateColumn" prefWidth="150" styleClass="table-column" text="Request Date" />
                            <TableColumn fx:id="gradeColumn" prefWidth="100" styleClass="table-column" text="Grade" />
                            <TableColumn fx:id="actionColumn" prefWidth="130" styleClass="table-column" text="Action" />
                        </columns>
                        <VBox.margin>
                            <Insets bottom="20" top="10" />
                        </VBox.margin>
                        <padding>
                            <Insets bottom="5" left="5" right="5" top="5" />
                        </padding>
                    </TableView>
                </VBox>
            </VBox>
        </ScrollPane>
    </VBox>
</HBox>
