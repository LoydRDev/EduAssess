<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="eduassess.controller.AdminInstructorAssignmentController"
      spacing="20" styleClass="admin-instructor-assignment"
      stylesheets="@../styles/admin-instructor-assignment.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Button text="Back to Dashboard" onAction="#backToDashboard" styleClass="back-button"/>
        <Label text="Instructor Course Assignment" styleClass="title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#refreshData" styleClass="refresh-button"/>
    </HBox>
    
    <!-- Assignment Form -->
    <GridPane hgap="20" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300"/>
        </columnConstraints>
        
        <Label text="Select Instructor:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="instructorComboBox" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Select Course:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="courseComboBox" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Button text="Assign Course" onAction="#assignCourse" 
                GridPane.rowIndex="2" GridPane.columnIndex="1" 
                GridPane.halignment="RIGHT"/>
    </GridPane>
    
    <!-- Search Section -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search:"/>
        <TextField fx:id="searchField" promptText="Search by instructor or course..." HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <!-- Assignments Table -->
    <TableView fx:id="assignmentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="instructorCol" text="Instructor" prefWidth="200"/>
            <TableColumn fx:id="courseCol" text="Course" prefWidth="200"/>
            <TableColumn fx:id="yearLevelCol" text="Year Level" prefWidth="100"/>
            <TableColumn fx:id="semesterCol" text="Semester" prefWidth="100"/>
            <TableColumn fx:id="dateCol" text="Assigned Date" prefWidth="150"/>
            <TableColumn fx:id="actionCol" text="Action" prefWidth="100"/>
        </columns>
        <placeholder>
            <Label text="No assignments found"/>
        </placeholder>
    </TableView>
    
    <!-- Status Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="status-bar">
        <Label fx:id="statusLabel" text="Ready"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="totalAssignmentsLabel" text="Total Assignments: 0"/>
    </HBox>
</VBox>